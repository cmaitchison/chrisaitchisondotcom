%h2= link_to(post.title, post_path(post))
.entrybody
  = raw post.body_html
.meta
  %ul
    %li.date
      Posted by
      %a{:href => "http://twitter.com/#!/cmaitchison", :target => "_blank"} @cmaitchison
      on #{format_post_date(post.published_at)}
    - unless post.tags.empty?
      %li.tags
        Tagged #{linked_tag_list(post.tags)}
    %li
      %a{:href => post_path(post)+ "#disqus_thread", :data => {"disqus-identifier" => "post_id_#{post.id}"}}#{post.title}
       
  #disqus_thread
    %script{:type => "text/javascript"}
      = show_comment_counts